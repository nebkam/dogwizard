<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    >
    <com.technics.trnqlchallenge.RoundedParseImageView
        android:id="@+id/fromPhoto"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:padding="@dimen/avatar_padding"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/silhouette"
        />
    <TextView
        android:id="@+id/messageFromName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/fromPhoto"
        android:layout_toStartOf="@id/fromPhoto"
        />
    <TextView
        android:id="@+id/messageBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/messageFromName"
        android:layout_toLeftOf="@id/fromPhoto"
        android:layout_toStartOf="@id/fromPhoto"
        />
</RelativeLayout>