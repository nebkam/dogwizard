<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.technics.trnqlchallenge.MainActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/gpsOffCard"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/card_corner"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true"
            android:visibility="gone"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/gpsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/details_vertical_margin"
                    android:text="@string/gps_off_title"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    />
                <TextView
                    android:id="@+id/gpsWarning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/gpsTitle"
                    android:padding="@dimen/details_vertical_margin"
                    android:text="@string/gps_off_warning"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />
                <LinearLayout
                    android:layout_below="@id/gpsWarning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    style="?android:buttonBarStyle"
                    android:gravity="right"
                    android:padding="8dp"
                    >
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_gps_skip"
                        style="?android:attr/borderlessButtonStyle"
                        android:onClick="ignoreGPSWarning"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_gps_set"
                        style="?android:attr/borderlessButtonStyle"
                        android:onClick="openGPSSettings"
                        />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/placeCard"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/card_corner"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/placePhoto"
                    android:contentDescription="@string/desc_place_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    />
                <TextView
                    android:id="@+id/placeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/placePhoto"
                    android:paddingTop="24dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textSize="24sp"
                    />
                <TextView
                    android:id="@+id/placeDistance"
                    android:layout_below="@id/placeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textSize="14sp"
                    />
                <LinearLayout
                    android:layout_below="@id/placeDistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    style="?android:buttonBarStyle"
                    android:gravity="right"
                    android:padding="8dp"
                    >
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_skip"
                        style="?android:attr/borderlessButtonStyle"
                        android:onClick="skip"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_mark_friendly"
                        style="?android:attr/borderlessButtonStyle"
                        android:onClick="markAsFriendly"
                        />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_owners_btn"
            android:onClick="showOwnersNearby" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_vets_btn"
            android:onClick="showVetsNearby"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_places_btn"
            android:onClick="showDogFriendlyPlaces"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Messages"
            android:onClick="showMessages"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Announcements"
            android:onClick="showAnnouncements"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_btn"
            android:onClick="showSettings" />
    </LinearLayout>
</ScrollView>