<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/purple"
    tools:context="com.technics.dogwizard.MainActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/gpsOffCard"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/card_corner"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true"
            android:visibility="gone"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/gpsWarning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/details_vertical_margin"
                    android:text="@string/gps_off_warning"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/card_subtitle_size"
                    />
                <LinearLayout
                    android:layout_below="@id/gpsWarning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    style="?android:buttonBarStyle"
                    android:gravity="right"
                    android:padding="@dimen/card_action_padding"
                    >
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_gps_skip"
                        style="?android:attr/borderlessButtonStyle"
                        android:background="@android:color/transparent"
                        android:onClick="ignoreGPSWarning"
                        android:layout_marginRight="@dimen/card_action_padding"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_gps_set"
                        style="?android:attr/borderlessButtonStyle"
                        android:background="@android:color/transparent"
                        android:onClick="openGPSSettings"
                        android:textColor="@color/colorAccent"
                        />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/placeCard"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/card_corner"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/placePhoto"
                    android:contentDescription="@string/desc_place_photo"
                    android:layout_width="@dimen/card_small_photo_width"
                    android:layout_height="@dimen/card_small_photo_height"
                    android:adjustViewBounds="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    />
                <TextView
                    android:id="@+id/placeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:paddingTop="24dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textSize="@dimen/card_title_size"
                    android:textColor="@color/colorPrimaryText"
                    />
                <TextView
                    android:id="@+id/placeDistance"
                    android:layout_below="@id/placeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textSize="@dimen/card_subtitle_size"
                    android:textColor="@color/colorSecondaryText"
                    />
                <LinearLayout
                    android:layout_below="@id/placeDistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    style="?android:buttonBarStyle"
                    android:gravity="right"
                    android:padding="@dimen/card_action_padding"
                    >
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_skip"
                        style="?android:attr/borderlessButtonStyle"
                        android:background="@android:color/transparent"
                        android:onClick="skip"
                        android:layout_marginRight="@dimen/card_action_padding"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_mark_friendly"
                        style="?android:attr/borderlessButtonStyle"
                        android:background="@android:color/transparent"
                        android:onClick="markAsFriendly"
                        android:textColor="@color/colorAccent"
                        />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TableLayout
            android:layout_marginTop="@dimen/details_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            >
            <TableRow>
                <Button
                    android:id="@+id/btn_owners_nearby"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:text="@string/show_owners_btn"
                    android:onClick="showOwnersNearby"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/colorPrimaryTextInverse"
                    android:drawableTop="@drawable/ic_group_24dp"
                    android:drawablePadding="8dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:layout_margin="4dp"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:text="@string/show_vets_btn"
                    android:onClick="showVetsNearby"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/colorPrimaryTextInverse"
                    android:drawableTop="@drawable/ic_local_hospital_24dp"
                    android:drawablePadding="8dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:layout_margin="4dp"
                    />
            </TableRow>
            <TableRow>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:text="@string/show_places_btn"
                    android:onClick="showDogFriendlyPlaces"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/colorPrimaryTextInverse"
                    android:drawableTop="@drawable/ic_public_24dp"
                    android:drawablePadding="8dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:layout_margin="4dp"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:text="Messages"
                    android:onClick="showMessages"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/colorPrimaryTextInverse"
                    android:drawableTop="@drawable/ic_email_24dp"
                    android:drawablePadding="8dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:layout_margin="4dp"
                    />
            </TableRow>

        </TableLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin">
            <ImageView
                android:id="@+id/btn_announcements"
                android:contentDescription="@string/btn_announcements_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/loud_speaker"
                android:onClick="showAnnouncements"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/announcement_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeLarge"
                android:textColor="@color/colorPrimaryTextInverse"
                android:onClick="showAnnouncements"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                />
            <ImageView
                android:id="@+id/btn_settings"
                android:contentDescription="@string/settings_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_settings_24dp"
                android:onClick="showSettings"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>



    </LinearLayout>
</ScrollView>